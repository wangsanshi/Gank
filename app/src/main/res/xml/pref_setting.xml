<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory
        android:layout="@layout/pref_category_widget"
        android:title="@string/setting_basic_msg">

        <Preference
            android:layout="@layout/pref_item"
            android:summary="@string/app_name"
            android:title="@string/setting_app_name" />

        <Preference
            android:key="@string/setting_version_key"
            android:layout="@layout/pref_item"
            android:title="@string/setting_version_msg" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/pref_category_widget"
        android:title="@string/setting_optimization">
        <Preference
            android:key="@string/setting_clear_cache_key"
            android:layout="@layout/pref_item"
            android:summary="@string/setting_cache_default_value"
            android:title="@string/setting_clear_cache" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/pref_category_widget"
        android:title="@string/setting_data">
        <Preference
            android:layout="@layout/pref_item"
            android:summary="@string/setting_api_value"
            android:title="@string/settting_data_source">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/setting_api_value" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/pref_category_widget"
        android:title="@string/setting_about">
        <Preference
            android:layout="@layout/pref_item"
            android:summary="@string/setting_github_value"
            android:title="@string/setting_github">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/setting_github_value" />
        </Preference>
        <Preference
            android:key="@string/setting_qq_key"
            android:layout="@layout/pref_item"
            android:summary="@string/setting_qq_value"
            android:title="@string/setting_qq" />
    </PreferenceCategory>
</PreferenceScreen>